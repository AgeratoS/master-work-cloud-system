generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://elsolcansado:root@localhost:5432/elsolcansado"
}

enum HttpVerb {
  GET
  POST
  PUT
  PATCH
  DELETE
}

model ServiceSolution {
  id      Int       @id @default(autoincrement())
  name    String
  Service Service[]
}

model Service {
  id                Int             @id @default(autoincrement())
  name              String          @default("Service")
  desc              String?
  externalUrl       String
  appId             String?
  apiKey            String?
  serviceSolution   ServiceSolution @relation(fields: [serviceSolutionId], references: [id])
  serviceSolutionId Int
}

model Developer {
  id       Int    @id @default(autoincrement())
  login    String
  password String

  tokens Token[]
}

model Token {
  id        Int       @id @default(autoincrement())
  devId     Int
  hash      String
  expired   DateTime
  belongsTo Developer @relation(fields: [devId], references: [id])
}
